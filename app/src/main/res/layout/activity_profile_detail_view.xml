<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    tools:context="kz.growit.smartservice.ProfileDetailView">


    <include
        android:id="@+id/toolbarProfileDetailView"
        layout="@layout/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="2dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/sliderLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.daimajia.slider.library.SliderLayout
                        android:id="@+id/sliderProfileDetail"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <com.daimajia.slider.library.Indicators.PagerIndicator
                        android:id="@+id/custom_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        custom:selected_color="#0095BF"
                        custom:selected_drawable="@drawable/rsz_1rsz_ss_symbol"
                        custom:selected_height="18dp"
                        custom:selected_padding_left="2dp"
                        custom:selected_padding_right="2dp"
                        custom:selected_width="13dp"
                        custom:shape="oval"
                        custom:unselected_color="#55333333"
                        custom:unselected_height="6dp"
                        custom:unselected_padding_left="2dp"
                        custom:unselected_padding_right="2dp"
                        custom:unselected_width="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <com.github.siyamed.shapeimageview.CircularImageView
                        android:id="@+id/thumbProfileDetailView"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="20dp"
                        android:padding="20dp"
                        android:layout_marginStart="20dp"
                        app:siBorderColor="@color/primary_dark"
                        app:siBorderWidth="4dp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/starOneProfileDetailView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:src="@drawable/star_outline" />

                            <ImageView
                                android:id="@+id/starTwoProfileDetailView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/star_outline" />

                            <ImageView
                                android:id="@+id/starThreeProfileDetailView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/star_outline" />

                            <ImageView
                                android:id="@+id/starFourProfileDetailView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/star_outline" />

                            <ImageView
                                android:id="@+id/starFiveProfileDetailView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:src="@drawable/star_outline" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/nameSurnameProfileDetailTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Имя профиля"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/categoryTextProfileDetailView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Категория"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/cityProfileDetailView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="город"
                            android:textSize="14sp" />

                        <com.rey.material.widget.Button
                            android:id="@+id/showPhoneProfileDetailViewButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:background="@drawable/my_button"
                            android:text="@string/show_phone_ru"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/servicesLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_rectangle"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/services_ru"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/servicesListTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginStart="60dp"
                        android:text="some text \nsome more text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/aboutLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_rectangle"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/about_profile_ru"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/aboutProfileTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:text="Информация о профиле" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/moreInfoLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_rectangle"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more_info_ru"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/languagesLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginStart="60dp"
                            android:text="@string/languages_ru"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/languagesListProfileDetailTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginStart="60dp"
                            android:text="список районов" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/educationLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginStart="60dp"
                            android:text="Образование:"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/educationTextProfileDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginStart="60dp"
                            android:text="Образование" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/experienceLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginStart="60dp"
                            android:text="@string/experience_ru"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/experienceTextProfileDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginStart="60dp"
                            android:text="1 год" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mapLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_rectangle"
                        android:orientation="horizontal"
                        android:padding="1dp">

                        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/mapProfileDetailView"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="fill_parent"
                            android:layout_height="240dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/showPicturesLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.rey.material.widget.Button
                        android:id="@+id/showPicturesProfileDetailViewButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="4dp"
                        android:background="@drawable/my_button"
                        android:text="@string/show_pictures_ru"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        app:rd_enable="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/showReviewsLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <com.rey.material.widget.Button
                        android:id="@+id/showReviewsProfileDetailViewButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="4dp"
                        android:background="@drawable/my_button"
                        android:text="@string/show_reviews_ru"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        app:rd_enable="true" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>
