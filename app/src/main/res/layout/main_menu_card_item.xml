<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#d5d5d5"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp">


    <TextView
        android:id="@+id/mainMenuCardItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="50dp"
        android:text="some place holder text goes here \nand it goes on and on \nno matter how many lines you add" />

    <Button
        android:id="@+id/mainMenuCardItemButton"
        style="@style/AppCompat.Button.Flat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:text="Button" />

</android.support.v7.widget.CardView>