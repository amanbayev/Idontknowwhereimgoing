<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="kz.growit.smartservice.Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/kenBurnsSplashScreenBg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ss_bg_blur_small" />

        <ImageView
            android:id="@+id/logoLoginImageView"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp"
            android:src="@drawable/ss_super_white_flat" />

        <TextView
            android:id="@+id/infoTextLoginTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/usernameLoginTextInputLayout"
            android:layout_alignLeft="@+id/usernameLoginTextInputLayout"
            android:layout_alignRight="@+id/usernameLoginTextInputLayout"
            android:layout_alignStart="@+id/usernameLoginTextInputLayout"
            android:layout_below="@+id/logoLoginImageView"
            android:layout_centerHorizontal="true"
            android:text="Для выполнения данной операции Вам необходимо выполнить вход на портал."
            android:textColor="#FFFFFF" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/usernameLoginTextInputLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infoTextLoginTextView"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/usernameLoginEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Номер телефона (77015559966)"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordLoginTextInputLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usernameLoginTextInputLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/passwordLoginEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/password_text_ru"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />
        </android.support.design.widget.TextInputLayout>

        <com.rey.material.widget.Button
            android:id="@+id/loginLoginButton"
            style="@drawable/my_button"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordLoginTextInputLayout"
            android:layout_centerHorizontal="true"
            android:text="@string/login_button_ru"
            android:textColor="#FFFFFF"
            app:rd_enable="true" />

        <com.rey.material.widget.Button
            android:id="@+id/registerLoginButton"
            style="@drawable/my_button"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginLoginButton"
            android:layout_centerHorizontal="true"
            android:text="@string/register_button_ru"
            android:textColor="#FFFFFF"
            app:rd_enable="true" />

        <com.rey.material.widget.Button
            android:id="@+id/cancelLoginButton"
            style="@drawable/my_button"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registerLoginButton"
            android:layout_centerHorizontal="true"
            android:text="@string/cancel_button_ru"
            android:textColor="#FFFFFF"
            app:rd_enable="true" />
    </RelativeLayout>
</ScrollView>
